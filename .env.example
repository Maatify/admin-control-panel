# Database (MySQL)
# Hostname of the database server (e.g., 127.0.0.1 or db)
DB_HOST=127.0.0.1
# Database name
DB_NAME=admin_control_panel
# Database username
DB_USER=root
# Database password
DB_PASS=password

# Security & Crypto
# DO NOT CHANGE WITHOUT SECURITY REVIEW

# Key for hashing email blind indexes (Min 32 chars)
EMAIL_BLIND_INDEX_KEY=GENERATE_SECURE_KEY_MIN_32_CHARS
# Key for encrypting email addresses (Min 32 chars). Must match ENCRYPTION_KEY.
EMAIL_ENCRYPTION_KEY=GENERATE_SECURE_KEY_MIN_32_CHARS
# Key for initial admin bootstrap encryption (Min 32 chars). Must match EMAIL_ENCRYPTION_KEY.
ENCRYPTION_KEY=GENERATE_SECURE_KEY_MIN_32_CHARS
# Enable recovery mode to bypass certain restrictions (true/false)
RECOVERY_MODE=false
