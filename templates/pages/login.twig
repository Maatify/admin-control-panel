{% extends "layout.twig" %}


{% block title %}Login
{% endblock %}


{% block content %}

	<main class="flex justify-center">
		<div class="w-full max-w-6xl px-4">
			<div class="flex justify-center mt-12 mb-6">
				<img src="./assets/images/login-bg.webp" class="w-full h-[100vh] absolute top-0 left-0 z-[-1] opacity-50 sm:opacity-25 object-cover object-center" alt="bg">
				<div
					class="w-full grid grid-cols-1 md:grid-cols-2 gap-6">

					<!-- Left Image -->
					<div class="flex justify-center hidden sm:block">
						<div class="bg-white shadow-lg rounded-lg p-1 flex items-center justify-center">
							<img lazyload class="  w-[700px] h-[600px] object-cover object-center rounded-md" src="./assets/images/login_model.png" alt="login-model">
						</div>
					</div>

					<!-- Right Form -->
					<div>
						<div class="bg-white shadow-lg rounded-lg md:p-2 sm:p-4 h-full mt-[calc(50vh-350px)] sm:mt-0">
							<div
								class="flex flex-col items-center justify-center h-full md:px-10 sm:p-4 p-3">

								<!-- Header -->
								<div class="text-center mb-10 flex flex-col items-center">
									<img lazyload src="./assets/images/logo.png" class="w-34 h-34 mb-[-10px] ml-[-45px] " alt="logo">
									<h2 class="text-3xl font-semibold font-[Ubuntu] mb-2">
										Login
									</h2>
									<p class="text-gray-600 text-sm capitalize tracking-wider">
										enter your email and password</p>
								</div>

								<!-- OTP Inputs -->
								<form method="post" action="/login" class="mb-6 w-full">
									{% if error %}
										<div class="text-red-500 text-sm mb-2 w-full  border border-red-500 p-2 rounded-md bg-red-100/50 flex items-center gap-2">
											<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 stroke-2 text-red-500">
												<path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z"/>
											</svg>
											{{ error }}</div>
									{% endif %}
									<div class="flex flex-col gap-1">
										<label class="form-label block mb-1 font-medium" for="usernameInput">
											Email<span class="text-red-500">*</span>
										</label>
										<div class="input-wrapper relative">
											<input type="text" id="usernameInput" name="email" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:ring-blue-500" placeholder="Enter your email">

												<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 absolute right-3 top-3 w-5 h-5 text-gray-500">
													<path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z"/>
												</svg>
											</input>
										</div>
										<div class="flex flex-col gap-1 mt-5 mb-5">
											<label class="form-label block mb-1 font-medium" for="passwordInput">
												Password<span class="text-red-500">*</span>
											</label>
											<div class="input-wrapper relative">
												<input type="password" id="passwordInput" name="password" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:ring-blue-500" placeholder="Enter your Password"/>

												<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 absolute right-3 top-3 size-6 w-5 h-5 cursor-pointer eye-icon text-gray-600">
													<path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z"/>
													<path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
												</svg>
												<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 absolute right-3 top-3 w-5 h-5 cursor-pointer slash icon hidden text-gray-600">
													<path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 0 0 1.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.451 10.451 0 0 1 12 4.5c4.756 0 8.773 3.162 10.065 7.498a10.522 10.522 0 0 1-4.293 5.774M6.228 6.228 3 3m3.228 3.228 3.65 3.65m7.894 7.894L21 21m-3.228-3.228-3.65-3.65m0 0a3 3 0 1 0-4.243-4.243m4.242 4.242L9.88 9.88"/>
												</svg>

											</div>
										</div>
										<div class="mb-4">
											<div class="g-recaptcha captchaDiv" id="captchaDiv"></div>
										</div>
										<button id="submitBtn" class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600 transition duration-200 cursor-pointer mt-6 font-[Ubuntu]" type="submit">
											login
										</button>
									</div>
								</form>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>

	{# </div><h1>Login</h1>
													<form method="post" action="/login">
													<label>Email:
													<input type="email" name="email" required></label><br>
													<label>Password:
													<input type="password" name="password" required></label><br>
													<label><input type="checkbox" name="remember_me">
													Remember Me</label><br>
													<button type="submit">Login</button></form> #}


	<script>

		const passwordInput = document.getElementById('passwordInput');
const eyeIcon = document.querySelector('.eye-icon');
const slashIcon = document.querySelector('.slash');

eyeIcon.addEventListener('click', () => {
if (passwordInput.type === 'password') {
passwordInput.type = 'text';
eyeIcon.style.display = 'none';
slashIcon.style.display = 'block';
}
});

slashIcon.addEventListener('click', () => {
if (passwordInput.type === 'text') {
passwordInput.type = 'password';
eyeIcon.style.display = 'block';
slashIcon.style.display = 'none';
}
});
	</script>
{% endblock %}
