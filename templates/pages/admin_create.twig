{% extends "layouts/base.twig" %}

{% block title %}Create Admin{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Create Admin</h1>
    </div>

    <div id="alert-container"></div>

    <div class="card">
        <div class="card-body">
            <form id="admin-create-form">
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" required>
                </div>
                <div class="mb-3">
                    <label for="roles" class="form-label">Role IDs (Comma separated)</label>
                    <input type="text" class="form-control" id="roles" placeholder="e.g. 1, 2">
                </div>

                <button type="submit" class="btn btn-primary">Create Admin</button>
                <a href="/admins" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script src="/assets/js/pages/admins.js"></script>
{% endblock %}
