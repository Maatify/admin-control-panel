{% extends "layouts/base.twig" %}

{% block title %}Admins{% endblock %}

{% block content %}
<div class="container-fluid">
    {# Header #}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Admins</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="/admins/create" class="btn btn-sm btn-primary">
                Create New
            </a>
        </div>
    </div>

    <div id="alert-container"></div>

    {# Search Section #}
    <div class="card mb-4">
        <div class="card-body">
            <form id="admins-search-form" class="row g-3">
                <div class="col-md-4">
                    <label for="filter-id" class="form-label">Admin ID</label>
                    <input type="text" class="form-control" id="filter-id" placeholder="Search by ID">
                </div>
                <div class="col-md-8 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">Search</button>
                    <button type="button" class="btn btn-secondary" id="btn-reset">Reset</button>
                </div>
            </form>
        </div>
    </div>

    {# DataTable Section #}
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="admins-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Identifier</th>
                            <th>Status</th>
                            <th>Roles</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr><td colspan="6" class="text-center">Loading...</td></tr>
                    </tbody>
                </table>
            </div>

            {# Pagination #}
            <nav aria-label="Admins pagination" class="d-flex justify-content-between align-items-center mt-3">
                <div class="d-flex align-items-center">
                    <select class="form-select form-select-sm me-2" id="per-page-select" style="width: auto;">
                        <option value="10">10</option>
                        <option value="20" selected>20</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                    <div class="text-muted small" id="pagination-info">
                        Showing 0 to 0 of 0 entries
                    </div>
                </div>
                <ul class="pagination mb-0" id="pagination-controls">
                    <!-- JS Paging -->
                </ul>
            </nav>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script src="/assets/js/pages/admins.js"></script>
{% endblock %}
