{% extends "layouts/base.twig" %}

{% block title %}
    Content Document Versions: {{ document_type.key }} | {{ ui.appName }}
{% endblock %}

{% block content %}
    {# =========================================================
       UI CONTRACT
       ---------------------------------------------------------
       - window.contentDocumentVersionsCapabilities
       - window.contentDocumentVersionsApi
       - JS owns all behavior
       ========================================================= #}

    <script>
        window.contentDocumentVersionsCapabilities = {
            can_view_types: {{ capabilities.can_view_types ?? false ? 'true' : 'false' }},
            can_create: {{ capabilities.can_create ?? false ? 'true' : 'false' }},
            can_activate: {{ capabilities.can_activate ?? false ? 'true' : 'false' }},
            can_deactivate: {{ capabilities.can_deactivate ?? false ? 'true' : 'false' }},
            can_archive: {{ capabilities.can_archive ?? false ? 'true' : 'false' }},
            can_publish: {{ capabilities.can_publish ?? false ? 'true' : 'false' }},
            can_view_translations: {{ capabilities.can_view_translations ?? false ? 'true' : 'false' }},
        };
        window.typeId = {{ document_type.id }};
        window.contentDocumentVersionsApi = {
            query: 'content-document-types/{type_id}/documents/query',
            create: 'content-document-types/{type_id}/documents/create',
            activate: 'content-document-types/{type_id}/documents/{document_id}/activate',
            deactivate: 'content-document-types/{type_id}/documents/{document_id}/deactivate',
            archive: 'content-document-types/{type_id}/documents/{document_id}/archive',
            publish: 'content-document-types/{type_id}/documents/{document_id}/publish',
            translation: 'content-document-types/{type_id}/documents/{document_id}/translations',
        };
    </script>

    {# ===================================================================
       Page Header (breadcrumb + title)
       =================================================================== #}
    <div class="flex flex-wrap items-center justify-between gap-3 mb-6">
        <div class="flex items-center gap-3">
            <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-100">
                ðŸ“„ {{ document_type.key }} Versions
            </h2>
        </div>

        <nav>
            <ol class="flex items-center gap-1.5">
                <li>
                    <a class="inline-flex items-center gap-1.5 text-sm text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                       href="{{ ui.adminUrl }}dashboard">
                        Home
                        <svg class="stroke-current" width="17" height="16" viewBox="0 0 17 16">
                            <path d="M6.0765 12.667L10.2432 8.50033L6.0765 4.33366"
                                  stroke-width="1.2"
                                  stroke-linecap="round"
                                  stroke-linejoin="round"/>
                        </svg>
                    </a>
                </li>

                {% if capabilities.can_view_types ?? false %}
                <li class="text-sm text-gray-800 dark:text-gray-200">
                    <a class="inline-flex items-center gap-1.5 text-sm text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                       href="{{ ui.adminUrl }}content-document-types">
                        Content Document Types
                        <svg class="stroke-current" width="17" height="16" viewBox="0 0 17 16">
                            <path d="M6.0765 12.667L10.2432 8.50033L6.0765 4.33366"
                                  stroke-width="1.2"
                                  stroke-linecap="round"
                                  stroke-linejoin="round"/>
                        </svg>
                    </a>
                </li>
                {% endif %}
                <li class="text-sm text-gray-800 dark:text-gray-200">
                    {{ document_type.key }}
                </li>
            </ol>
        </nav>
    </div>

    {# ===================================================================
       Overview Card
       =================================================================== #}
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow dark:shadow-gray-900/50 border border-gray-200 dark:border-gray-700 mb-6 p-5">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">

            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">ID</p>
                <code class="text-sm font-mono bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 px-2 py-1 rounded text-gray-800 dark:text-gray-200">
                    {{ document_type.id }}
                </code>
            </div>

            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Key</p>
                <p class="text-sm text-gray-800 dark:text-gray-100">
                    {{ document_type.key }}
                </p>
            </div>

            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Requires Acceptance Default</p>
                <p class="text-sm text-gray-800 dark:text-gray-100">
                    {{ document_type.requiresAcceptanceDefault ? 'Yes' : 'No' }}
                </p>
            </div>

            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Is System</p>
                <p class="text-sm text-gray-800 dark:text-gray-100">
                    {{ document_type.isSystem ? 'Yes' : 'No' }}
                </p>
            </div>

            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Created At</p>
                <code class="text-sm font-mono bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 px-2 py-1 rounded text-gray-800 dark:text-gray-200">
                    {{ document_type.createdAt|date('Y-m-d H:i:s') }}
                </code>
            </div>

            {% if document_type.updatedAt %}
            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Updated At</p>
                <code class="text-sm font-mono bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 px-2 py-1 rounded text-gray-800 dark:text-gray-200">
                    {{ document_type.updatedAt ? document_type.updatedAt|date('Y-m-d H:i:s') : '' }}
                </code>
            </div>
            {% endif %}

        </div>
    </div>

    <div class="px-0 py-2">
        <div class="container lg:max-w-[100%] mt-6">

            <!-- Filters -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 mb-6">
                <form id="content-document-versions-filter-form" class="space-y-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">

                        <!-- Document ID -->
                        <div>
                            <label for="filter-document-id" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                ðŸ†” Document ID
                            </label>
                            <input type="number"
                                   id="filter-document-id"
                                   min="1"
                                   class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                                   placeholder="e.g., 12"/>
                        </div>

                        <!-- Version -->
                        <div>
                            <label for="filter-version" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                ðŸ”¢ Version
                            </label>
                            <input type="text"
                                   id="filter-version"
                                   class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                                   placeholder="e.g., v1.0.0"/>
                        </div>

                        <!-- Status -->
                        <div>
                            <label for="filter-status" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                ðŸ“Œ Status
                            </label>
                            <select id="filter-status"
                                    class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100">
                                <option value="">All</option>
                                <option value="draft">Draft</option>
                                <option value="active">Active</option>
                                <option value="archived">Archived</option>
                            </select>
                        </div>

                        <!-- Requires Acceptance -->
                        <div>
                            <label for="filter-requires-acceptance" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                ðŸ“œ Requires Acceptance
                            </label>
                            <select id="filter-requires-acceptance"
                                    class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100">
                                <option value="">All</option>
                                <option value="1">Yes</option>
                                <option value="0">No</option>
                            </select>
                        </div>

                        <!-- Created From -->
                        <div>
                            <label for="filter-created-from" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                ðŸ“… Created From
                            </label>
                            {# âœ… class="date-picker" + data-role="from" â†’ DatePickerAutoInit works automatically #}
                            <input type="text"
                                   id="filter-created-from"
                                   data-role="from"
                                   class="date-picker w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                                   placeholder="Created From..."/>
                        </div>

                        <!-- Created To -->
                        <div>
                            <label for="filter-created-to" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                ðŸ“… Created To
                            </label>
                            {# âœ… class="date-picker" + data-role="to" â†’ DatePickerAutoInit works automatically #}
                            <input type="text"
                                   id="filter-created-to"
                                   data-role="to"
                                   class="date-picker w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                                   placeholder="Created To..."/>
                        </div>

                    </div>

                    <div class="flex flex-wrap gap-3 pt-4">
                        <button type="submit"
                                class="px-6 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                            Search
                        </button>

                        <button type="button"
                                id="content-document-versions-reset-filters"
                                class="px-6 py-2.5 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors font-medium">
                            Reset
                        </button>

                        {% if capabilities.can_create %}
                            <button type="button"
                                    id="btn-create-content-document-version"
                                    class="ml-auto px-6 py-2.5 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium">
                                Create Document Version
                            </button>
                        {% endif %}
                    </div>
                </form>
            </div>

            <!-- Global Search -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4 mb-4">
                <div class="flex items-center gap-3">
                    <input type="text"
                           id="content-document-versions-search"
                           class="flex-1 px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                           placeholder="ðŸ” Quick search by version or ID"/>
                    <button type="button"
                            id="content-document-versions-search-btn"
                            class="px-6 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                        Search
                    </button>
                    <button type="button"
                            id="content-document-versions-clear-search"
                            class="px-6 py-2.5 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors font-medium">
                        Clear
                    </button>
                </div>
            </div>

            <!-- Data Table -->
            <div id="content-document-versions-table-container" class="w-full"></div>

        </div>
    </div>
{% endblock %}

{% block scripts %}
    {# âœ… Flatpickr CDN â€” Must be loaded before datetime-picker.js #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"/>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/api_handler.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/callback_handler.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/Input_checker.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/data_table.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/select2.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/datetime-picker.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/admin-ui-components.js') }}"></script>

    <!-- Page Specific -->
    <script src="{{ asset('assets/maatify/admin-kernel/js/pages/content_document/content_document_versions_list.js') }}"></script>
{% endblock %}