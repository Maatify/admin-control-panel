{% extends "layouts/base.twig" %}

{% block title %}
    Content Document Translations: {{ document_version.typeKey }} | {{ ui.appName }}
{% endblock %}

{% block content %}
    {# =========================================================
       UI CONTRACT
       ---------------------------------------------------------
       - window.contentDocumentTranslationsCapabilities
       - window.contentDocumentTranslationsApi
       - JS owns all behavior
       ========================================================= #}

    <script>
        window.contentDocumentTranslationsCapabilities = {
            can_view_types: {{ capabilities.can_view_types ?? false ? 'true' : 'false' }},
            can_view_versions: {{ capabilities.can_view_versions ?? false ? 'true' : 'false' }},
            can_view_translation_details: {{ capabilities.can_view_translation_details ?? false ? 'true' : 'false' }},
        };
        window.contentDocumentTranslationsApi = {
            query: '/content-document-types/{type_id}/documents/{document_id}/translations/query',
            translation_details: '/content-document-types/{type_id}/documents/{document_id}/translations/{translation_id}',
        };
        window.typeId = {{ document_version.documentTypeId }};
        window.documentId = {{ document_version.id }};
        window.contentDocumentTranslationsContext = {
            languages: {{ languages|json_encode|raw }}
        };
    </script>

    {# ===================================================================
       Page Header (breadcrumb + title)
       =================================================================== #}
    <div class="flex flex-wrap items-center justify-between gap-3 mb-6">
        <div class="flex items-center gap-3">
            <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-100">
                ðŸ“„ {{ document_version.typeKey }} Version {{ document_version.version }} Translation Management
            </h2>
        </div>

        <nav>
            <ol class="flex items-center gap-1.5">
                <li>
                    <a class="inline-flex items-center gap-1.5 text-sm text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                       href="{{ ui.adminUrl }}dashboard">
                        Home
                        <svg class="stroke-current" width="17" height="16" viewBox="0 0 17 16">
                            <path d="M6.0765 12.667L10.2432 8.50033L6.0765 4.33366"
                                  stroke-width="1.2"
                                  stroke-linecap="round"
                                  stroke-linejoin="round"/>
                        </svg>
                    </a>
                </li>

                {% if capabilities.can_view_types ?? false %}
                <li class="text-sm text-gray-800 dark:text-gray-200">
                    <a class="inline-flex items-center gap-1.5 text-sm text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                       href="{{ ui.adminUrl }}content-document-types">
                        Content Document Types
                        <svg class="stroke-current" width="17" height="16" viewBox="0 0 17 16">
                            <path d="M6.0765 12.667L10.2432 8.50033L6.0765 4.33366"
                                  stroke-width="1.2"
                                  stroke-linecap="round"
                                  stroke-linejoin="round"/>
                        </svg>
                    </a>
                </li>
                {% endif %}

                {% if capabilities.can_view_versions ?? false %}
                <li class="text-sm text-gray-800 dark:text-gray-200">
                    <a class="inline-flex items-center gap-1.5 text-sm text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                       href="{{ ui.adminUrl }}content-document-types/{{ document_version.documentTypeId }}/documents">
                        {{ document_version.typeKey }}
                        <svg class="stroke-current" width="17" height="16" viewBox="0 0 17 16">
                            <path d="M6.0765 12.667L10.2432 8.50033L6.0765 4.33366"
                                  stroke-width="1.2"
                                  stroke-linecap="round"
                                  stroke-linejoin="round"/>
                        </svg>
                    </a>
                </li>
                {% endif %}
                <li class="text-sm text-gray-800 dark:text-gray-200">
                    {{ document_version.version }}
                </li>
            </ol>
        </nav>
    </div>

    {# ===================================================================
       Overview Card
       =================================================================== #}
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow dark:shadow-gray-900/50 border border-gray-200 dark:border-gray-700 mb-6 p-5">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">

            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Type ID</p>
                <code class="text-sm font-mono bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 px-2 py-1 rounded text-gray-800 dark:text-gray-200">
                    {{ document_version.documentTypeId }}
                </code>
            </div>

            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Document ID</p>
                <code class="text-sm font-mono bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 px-2 py-1 rounded text-gray-800 dark:text-gray-200">
                    {{ document_version.id }}
                </code>
            </div>

            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Key</p>
                <p class="text-sm text-gray-800 dark:text-gray-100">
                    {{ document_version.typeKey }}
                </p>
            </div>

            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Version</p>
                <p class="text-sm text-gray-800 dark:text-gray-100">
                    {{ document_version.version }}
                </p>
            </div>

            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Requires Acceptance Default</p>
                <p class="text-sm text-gray-800 dark:text-gray-100">
                    {{ document_version.requiresAcceptance ? 'Yes' : 'No' }}
                </p>
            </div>

            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Is Active</p>
                <p class="text-sm text-gray-800 dark:text-gray-100">
                    {{ document_version.isActive ? 'Yes' : 'No' }}
                </p>
            </div>

            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Created At</p>
                <code class="text-sm font-mono bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 px-2 py-1 rounded text-gray-800 dark:text-gray-200">
                    {{ document_version.createdAt|date('Y-m-d H:i:s') }}
                </code>
            </div>

            {% if document_version.publishedAt %}
            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Published At</p>
                <code class="text-sm font-mono bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 px-2 py-1 rounded text-gray-800 dark:text-gray-200">
                    {{ document_version.publishedAt ? document_version.publishedAt|date('Y-m-d H:i:s') : '' }}
                </code>
            </div>
            {% endif %}

            {% if document_version.updatedAt %}
            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Updated At</p>
                <code class="text-sm font-mono bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 px-2 py-1 rounded text-gray-800 dark:text-gray-200">
                    {{ document_version.updatedAt ? document_version.updatedAt|date('Y-m-d H:i:s') : '' }}
                </code>
            </div>
            {% endif %}

        </div>
    </div>

    <div class="px-0 py-2">
        <div class="container lg:max-w-[100%] mt-6">

            <!-- Filters -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 mb-6">
                <form id="content-document-versions-filter-form" class="space-y-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">

                        <div>
                            <label for="filter-has-translation" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                ðŸ“œ Has Translation
                            </label>
                            <select id="filter-has-translation"
                                    class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100">
                                <option value="">All</option>
                                <option value="1">Yes</option>
                                <option value="0">No</option>
                            </select>
                        </div>

                        <div>
                            <label for="filter-version" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                ðŸ”¢ Language
                            </label>
                            <div id="translation-filter-language-id" class="relative w-full">
                                <div class="js-select-box w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 cursor-pointer flex items-center justify-between hover:border-gray-400 transition-colors">
                                    <input type="text" class="js-select-input bg-transparent border-none outline-none w-full cursor-pointer text-gray-900 dark:text-gray-100" placeholder="Select a language" readonly>
                                    <svg class="js-arrow w-4 h-4 text-gray-500 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                    </svg>
                                </div>
                                <div class="js-dropdown hidden absolute z-50 w-full mt-1 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md shadow-lg max-h-60 overflow-y-auto">
                                    <div class="p-2 sticky top-0 bg-white dark:bg-gray-700 border-b border-gray-200 dark:border-gray-600">
                                        <input type="text" class="js-search-input w-full px-2 py-1 text-sm border border-gray-300 dark:border-gray-600 rounded bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-1 focus:ring-blue-500" placeholder="Search...">
                                    </div>
                                    <ul class="js-select-list py-1">
                                        <!-- Options will be populated by JS -->
                                    </ul>
                                </div>
                            </div>
                        </div>


                    <div class="flex flex-wrap gap-3 pt-4">
                        <button type="submit"
                                class="px-6 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                            Search
                        </button>

                        <button type="button"
                                id="content-document-versions-reset-filters"
                                class="px-6 py-2.5 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors font-medium">
                            Reset
                        </button>
                    </div>

                    </div>

                </form>
            </div>

            <!-- Global Search -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4 mb-4">
                <div class="flex items-center gap-3">
                    <input type="text"
                           id="content-document-versions-search"
                           class="flex-1 px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                           placeholder="ðŸ” Quick search by Language Code or Language Name"/>
                    <button type="button"
                            id="content-document-versions-search-btn"
                            class="px-6 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                        Search
                    </button>
                    <button type="button"
                            id="content-document-versions-clear-search"
                            class="px-6 py-2.5 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors font-medium">
                        Clear
                    </button>
                </div>
            </div>

            <!-- Data Table -->
            <div id="content-document-versions-table-container" class="w-full"></div>

        </div>
    </div>

    {# ===================================================================
       ðŸŽ¨ Custom Styles for Select2 Dark Mode
       =================================================================== #}
    <style>
        /* Dark Mode overrides for Select2 selected item */
        .dark .js-select-list li.bg-blue-50 {
            background-color: rgba(30, 64, 175, 0.3) !important; /* blue-900/30 */
        }
        .dark .js-select-list li.text-blue-600 {
            color: #60a5fa !important; /* blue-400 */
        }
        .dark .js-select-list li.text-blue-600 span.font-bold {
            color: #60a5fa !important; /* blue-400 */
        }
    </style>

{% endblock %}

