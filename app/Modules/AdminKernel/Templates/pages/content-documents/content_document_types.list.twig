{% extends "layouts/base.twig" %}

{% block title %}
    Content Document Types | {{ ui.appName }}
{% endblock %}

{% block content %}
    {# =========================================================
       UI CONTRACT
       ---------------------------------------------------------
       - window.contentDocumentTypesCapabilities
       - window.contentDocumentTypesApi
       - JS owns all behavior
       ========================================================= #}

    <script>
        window.contentDocumentTypesCapabilities = {
            can_create: {{ capabilities.can_create ?? false ? 'true' : 'false' }},
            can_update: {{ capabilities.can_update ?? false ? 'true' : 'false' }},
            can_view_versions: {{ capabilities.can_view_versions ?? false ? 'true' : 'false' }},
        };
    </script>

    <script>
        window.contentDocumentTypesApi = {
            dropdown: 'content-document-types/dropdown',
            query: 'content-document-types/query',
            create: 'content-document-types/create',
            update: 'content-document-types/{type_id}/update'
        };
    </script>

    <!-- Page Header -->
    <div class="flex flex-wrap items-center justify-between gap-3 mb-6">
        <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-100">
            üìÑ Content Document Types
        </h2>

        <nav>
            <ol class="flex items-center gap-1.5">
                <li>
                    <a class="inline-flex items-center gap-1.5 text-sm text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                       href="{{ ui.adminUrl }}dashboard">
                        Home
                        <svg class="stroke-current" width="17" height="16" viewBox="0 0 17 16">
                            <path d="M6.0765 12.667L10.2432 8.50033L6.0765 4.33366"
                                  stroke-width="1.2"
                                  stroke-linecap="round"
                                  stroke-linejoin="round"/>
                        </svg>
                    </a>
                </li>
                <li class="text-sm text-gray-800 dark:text-gray-200">
                    Content Document Types
                </li>
            </ol>
        </nav>
    </div>

    <div class="px-0 py-2">
        <div class="container lg:max-w-[100%] mt-6">

            <!-- Filters -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 mb-6">
                <form id="content-document-types-filter-form" class="space-y-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">

                        <!-- ID -->
                        <div>
                            <label for="filter-id" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                üÜî ID
                            </label>
                            <input type="number"
                                   id="filter-id"
                                   min="1"
                                   class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                                   placeholder="e.g., 1"/>
                        </div>

                        <!-- Key -->
                        <div>
                            <label for="filter-key" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                üîë Key
                            </label>
                            <input type="text"
                                   id="filter-key"
                                   class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                                   placeholder="e.g., terms"/>
                        </div>

                        <!-- Requires Acceptance Default -->
                        <div>
                            <label for="filter-requires-acceptance-default" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                üìú Requires Acceptance (Default)
                            </label>
                            <select id="filter-requires-acceptance-default"
                                    class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100">
                                <option value="">All</option>
                                <option value="1">Yes</option>
                                <option value="0">No</option>
                            </select>
                        </div>

                        <!-- Is System -->
                        <div>
                            <label for="filter-is-system" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                ‚öôÔ∏è System Type
                            </label>
                            <select id="filter-is-system"
                                    class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100">
                                <option value="">All</option>
                                <option value="1">System</option>
                                <option value="0">Custom</option>
                            </select>
                        </div>
                    </div>

                    <div class="flex flex-wrap gap-3 pt-4">
                        <button type="submit"
                                class="px-6 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                            Search
                        </button>

                        <button type="button"
                                id="content-document-types-reset-filters"
                                class="px-6 py-2.5 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors font-medium">
                            Reset
                        </button>

                        {% if capabilities.can_create %}
                            <button type="button"
                                    id="btn-create-content-document-type"
                                    class="ml-auto px-6 py-2.5 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium">
                                Create Document Type
                            </button>
                        {% endif %}
                    </div>
                </form>
            </div>

            <!-- Global Search -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4 mb-4">
                <div class="flex items-center gap-3">
                    <input type="text"
                           id="content-document-types-search"
                           class="flex-1 px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                           placeholder="üîç Quick search by key"/>
                    <button type="button"
                            id="content-document-types-search-btn"
                            class="px-6 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                        Search
                    </button>
                    <button type="button"
                            id="content-document-types-clear-search"
                            class="px-6 py-2.5 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors font-medium">
                        Clear
                    </button>
                </div>
            </div>

            <!-- Data Table -->
            <div id="content-document-types-table-container" class="w-full"></div>

        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script src="{{ asset('assets/maatify/admin-kernel/js/api_handler.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/callback_handler.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/Input_checker.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/data_table.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/select2.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/admin-ui-components.js') }}"></script>

    <!-- Page Specific -->
    <script src="{{ asset('assets/maatify/admin-kernel/js/pages/content_document/content_document_types_list.js') }}"></script>
{% endblock %}